{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <div class="header">
    <h1>Heroes</h1>
    </div>

    {{#if heros}}
        {{#each heros}}
            <div class="list" id="hero-bak">
                <p>Name: <span>{{name}}</span></p>
                <p><Age: {{age}}</p>
                <p>Super Powers: {{power}}</p>
                <p>Weakness: {{weakness}}</p>

            </div>

        {{/each}}
        <p class="del-all"><a href="/heros/delete">DELETE ALL Hero</a></p>
    {{else}}
        <div class="success">
        <p>No Heroes yet!</p>
        </div>
    {{/if}}
{{/partial}}
{{>layout.hbs}}
